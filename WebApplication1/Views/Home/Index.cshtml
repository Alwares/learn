@model HomePageViewModel

@{
    ViewBag.Title = "Home";
}
<div>
    
    <table>
        @if (Model.Restaurants != null && Model.Restaurants.Any())
        {
            foreach (var restaurant in Model.Restaurants)
             {
                 <tr>
                     

                     <td>@restaurant.name</td>
                     <td><a asp-action="Details" asp-route-id="@restaurant.Id">Details</a> 
                         <a asp-action="Edit" asp-route-id="@restaurant.Id">Edit</a>
                     </td>
                 </tr>
             }
        }

    </table>
    <a asp-controller="Home" asp-action="Create">Create</a>
</div>
@section footer{ 
    <h3>@Model.CurrentGreeting</h3>
}